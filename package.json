{
  "name": "zenstack-kit",
  "version": "0.1.7",
  "description": "Drizzle-kit like CLI tooling for ZenStack schemas with Kysely support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "zenstack-kit": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "zenstack",
    "kysely",
    "drizzle-kit",
    "typescript",
    "orm",
    "migrations",
    "database",
    "cli",
    "schema"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olup/zenstack-kit.git"
  },
  "bugs": {
    "url": "https://github.com/olup/zenstack-kit/issues"
  },
  "homepage": "https://github.com/olup/zenstack-kit#readme",
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@zenstackhq/orm": ">=3.0.0",
    "kysely": ">=0.27.0"
  },
  "dependencies": {
    "@zenstackhq/language": "^3.1.0",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "jiti": "^2.4.2",
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.18.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.2.7",
    "@zenstackhq/orm": "^3.1.0",
    "better-sqlite3": "^12.5.0",
    "kysely": "^0.28.9",
    "pg": "^8.13.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
